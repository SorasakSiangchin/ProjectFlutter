@model Backend.Models.Data.Product

@{
    ViewData["Title"] = "Edit";
}



<h1 class="text-center">แก้ไขสินค้า</h1>
<hr />
<div class="d-flex justify-content-center">
    <div class="col-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Image)
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdCategoryProduct" class="control-label"></label>
                <select asp-for="IdCategoryProduct" class="form-control" asp-items="ViewBag.IdCategoryProduct"></select>
                <span asp-validation-for="IdCategoryProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input name="UpFile" accept="image/*" type="file" class="form-control" />

            </div>
            @*<div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>



<div>
    <a class="btn btn-secondary" asp-action="Index">กลับ</a>
</div>

